{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./frontend/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@backend/*": [
        "./backend/*"
      ]
    },
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "frontend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "backend",
    "shared",
    "electron"
  ]
}
